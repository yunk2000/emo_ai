<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dd_ai_end.mapper.ChatHistoryMapper">

    <select id="selectByTime" resultType="ChatHistory">
        SELECT * FROM chat_history WHERE timestamp = #{timestamp}
    </select>

    <insert id="insertChatHistory" parameterType="com.example.dd_ai_end.entity.ChatHistory" useGeneratedKeys="true" keyProperty="messageId">
        INSERT INTO chat_history
            (user_id, content, timestamp, hss, ai_message_id, sentiment_id)
        VALUES
            (#{userId}, #{content}, #{timestamp}, #{hss}, #{aiMessageId}, #{sentimentId})
    </insert>
</mapper>