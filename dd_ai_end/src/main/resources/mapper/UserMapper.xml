<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dd_ai_end.mapper.UserMapper">
    <select id="selectByUsername" resultType="User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="selectByPhone" resultType="User">
        SELECT * FROM user WHERE phone = #{phone}
    </select>

    <insert id="insertUser" parameterType="com.example.dd_ai_end.entity.User">
        INSERT INTO user (username,password,created_at,phone)
        VALUES (#{username},#{password}, #{createdAt}, #{phone})
    </insert>

    <select id="findUsernameById" resultType="String">
        SELECT username FROM user WHERE user_id = #{userId}
    </select>
</mapper>